<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="xpay-persistence">

        <class>jpaperf.main.entity.MainUser</class>

        <class>jpaperf.pay.entity.PayAccount</class>

        <class>jpaperf.pay.entity.PayAccountItem</class>

        <!--
        <jta-data-source>java:/slickperf-ds</jta-data-source>
      -->
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/xpay"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="1root"/>
        </properties>
    </persistence-unit>
</persistence>
        